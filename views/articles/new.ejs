<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Post a New Article</h1>
        <p style="text-align: center;"><em>Coming soon: automatic URL parsing</em></p>
        <div style="margin: 25px auto; width: 50%;">
            <form action="/articles" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="article[title]" placeholder="Article Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[publication]" placeholder="publication">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[articleAuthor]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[url]" placeholder="Article URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" name="article[articleDesc]" placeholder="Site Blurb"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" type="textarea" name="article[desc]" placeholder="Your Comments"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>