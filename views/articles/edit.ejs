<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Article</h1>
        <p style="text-align: center;"><em>Coming soon: automatic URL parsing</em></p>
        <div style="margin: 25px auto; width: 50%;">
            <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="article[title]" value="<%= article.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[publication]" value="<%= article.publication %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[author]" value="<%= article.articleAuthor %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[url]" value="<%= article.url %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" name="article[articleDesc]"><%= article.articleDesc %></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" type="textarea" name="article[userDesc]" ><%= article.desc %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>