<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Login</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login/?redirect=<%= redirect %>" method="POST">
                <input id="focus" class="form-group form-control" type="text" name="username" placeholder="username">
                <input class="form-group form-control" type="password" name="password", placeholder="password">
                <button class="btn btn-lg btn-primary btn-block">Login</button>
            </form>
            <div class="text-center" style="padding-top: 1.0em;">
                <a href="/register">No Account? Sign up!</a>
            </div>
        </div>
    </div>
</div>

<script>
    $("#focus").focus();
</script>

<% include ./partials/footer %>